<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.focus.FocusFragment">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/custom_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Режим фокусировки"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/selectIndicatorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбрать тип индикатора"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/indicatorSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/selectIndicatorText"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/setFocusTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Указать время фокусировки"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/indicatorSpinner"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/addTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/focusTimeInput"
        app:layout_constraintStart_toStartOf="@id/setFocusTimeText"
        app:layout_constraintBottom_toBottomOf="@id/focusTimeInput"
        app:layout_constraintEnd_toStartOf="@id/focusTimeInput"
        />

    <EditText
        android:id="@+id/focusTimeInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Введите время"
        android:inputType="time"
        app:layout_constraintTop_toBottomOf="@id/setFocusTimeText"
        app:layout_constraintStart_toEndOf="@id/addTime"
        app:layout_constraintEnd_toEndOf="@id/removeTime"/>
    <ImageView
        android:id="@+id/removeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_remove_24"
        app:layout_constraintTop_toTopOf="@id/focusTimeInput"
        app:layout_constraintStart_toEndOf="@id/focusTimeInput"
        app:layout_constraintBottom_toBottomOf="@id/focusTimeInput"
        />

    <Button
        android:id="@+id/createIndicatorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Начать фокусироваться"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/focusTimeInput"/>

</androidx.constraintlayout.widget.ConstraintLayout>