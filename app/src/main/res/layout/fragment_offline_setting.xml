<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Вы находитесь в оффлайн режиме. В данном режиме все сохраняется локально на телефоне. Вы можете удалять историю здесь."
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/delete_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очистить историю"
        android:layout_margin="15dp"
        app:backgroundTint="@color/button_color"
        app:layout_constraintTop_toBottomOf="@id/text_offline"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти из оффлайн режима"
        android:layout_margin="15dp"
        app:backgroundTint="@color/button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>