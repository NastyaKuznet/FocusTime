<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.createTypeIndicator.CreateTypeIndicatorsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/custom_background">

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Типы индикаторов"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/indicatorListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список типов индикатора"
        android:padding="16dp"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/indicatorList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />

    <Button
        android:id="@+id/createIndicatorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать новый тип индикатора"
        android:layout_margin="16dp"/>

</LinearLayout>