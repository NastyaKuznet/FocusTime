<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.accountUser.AccountUserEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/custom_background">

        <TextView
            android:id="@+id/screenTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/action_bar_account_user"
            android:textSize="18sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editUserStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/input_statuc"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:layout_marginVertical="32dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/button_color"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/themeSwitchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/button_color"
        android:text="@string/button_change_theme"/>

</LinearLayout>